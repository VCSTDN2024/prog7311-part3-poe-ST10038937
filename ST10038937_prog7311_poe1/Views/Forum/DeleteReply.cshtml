@model ST10038937_prog7311_poe1.Models.PostReply

@{
    ViewData["Title"] = "Delete Reply";
}

<div class="container main-container">
    <h1 class="display-5">@ViewData["Title"]</h1>
    <p class="lead">Are you sure you want to permanently delete this reply?</p>

    <div class="card my-4">
        <div class="card-header">
            <h4 class="mb-0 text-white">Reply Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Author</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.User.UserName)</dd>

                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("g")</dd>

                <dt class="col-sm-3">Content</dt>
                <dd class="col-sm-9">
                    <blockquote class="blockquote mb-0">
                        <p>@Html.DisplayFor(model => model.Content)</p>
                    </blockquote>
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="DeleteReply">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete Reply</button>
        <a asp-action="Details" asp-route-id="@Model.ForumPostId" class="btn btn-secondary">Back to Post</a>
    </form>
</div>
