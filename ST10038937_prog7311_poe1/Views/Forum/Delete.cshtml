@model ST10038937_prog7311_poe1.Models.ForumPost

@{
    ViewData["Title"] = "Delete Post";
}

<div class="container main-container">
    <h1 class="display-4 mb-4">Delete Forum Post</h1>

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Warning!</h4>
        <p class="mb-0">Are you sure you want to permanently delete this post and all its replies? This action cannot be undone.</p>
    </div>

    <section class="card shadow mb-4" aria-labelledby="delete-confirm-heading">
        <div class="card-header">
            <h2 id="delete-confirm-heading" class="h5 mb-0 text-white">Confirm Deletion of: @Model.Title</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Title</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3 fw-bold">Author</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.User.UserName)</dd>

                <dt class="col-sm-3 fw-bold">Date</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToLongDateString()</dd>

                <dt class="col-sm-3 fw-bold">Content</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Content)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary" aria-label="Cancel deletion and return to forum">Cancel</a>
                    <button type="submit" class="btn btn-danger" aria-label="Confirm permanent deletion of post: @Model.Title">Delete Permanently</button>
                </div>
            </form>
        </div>
    </section>
</div>
